{
  "defaultSeverity": "error",
  "extends": "stylelint-config-recommended",
  "plugins": [
    "stylelint-order",
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "declaration-property-unit-allowed-list": {
      "font-size": [
        "rem"
      ],
      "line-height": [
        "rem"
      ]
    },
    "order/properties-alphabetical-order": true
  }
}
